<cs-form-group validationMessage:from="validationMessage" elementClass:from="formGroupClass">
    <cs-label label:from="label" required:from="required"/>
    <textarea value:bind="value" class="form-control {{elementClass}} {{visibilityClass}}" placeholder="{{placeholder}}"
              focused:from="focus" rows:from="rows" cols:from="columns"/>
</cs-form-group>
