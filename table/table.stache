<div class="{{containerClass}}">
    {{#if(shouldShowEmptyMessage)}}
        <div class="alert alert-info" role="alert">{{emptyMessage}}</div>
    {{else}}
        <table class="table {{tableClass}}">
            <thead>
            <tr class="row">
                {{#each(columns)}}
                    <th class="{{columnClass}} {{headerClass}}">
                        {{columnTitle}}
                    </th>
                {{/each}}
            </tr>
            </thead>
            <tbody>
            {{#each(rows)}}
                <tr class="row {{scope.vm.getRowClass (.)}}" on:click="scope.vm._rowClick(.)">
                    {{#each(../columns)}}
                        <td data-title="{{columnTitle}}" class="{{columnClass}} {{dataClass}}">
                            {{#if(hasStache)}}
                                {{scope.vm.getView(../., .}}
                            {{else}}
                                {{scope.vm.getColumnValue(../., .)}}
                            {{/if}}
                        </td>
                    {{/each}}
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>